pipeline {
    agent any

    stages {
          stage('build'){
            steps {
                echo 'Builship'
                  }
                       }
            stage('test'){
                
                steps{
                    
                    echo 'testing '
                    
                     }
                
                   } 
               stage('deploy'){
                
                steps{
                    
                    echo 'deployement !!!'
                    
                   }
                
                            } 
         }
         post{
         
         always{
         
          echo 'deployment finished  mail sent'
         
             }
         
         }
   
   }
